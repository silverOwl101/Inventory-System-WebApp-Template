@model Account
@{
    ViewData["Title"] = "Create an account";
}


<main class="form-signin w-100 m-auto">
    <form method="post" asp-action="Create">
        <h1 class="h3 mb-3 fw-normal">Create Account</h1>
        
        <div class="form-floating mb-3">
            <input asp-for="AccountName" class="form-control" id="floatingInput" placeholder="Account name">
            <label for="floatingInput">Account name</label>
            <span asp-validation-for="AccountName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="AccountPass" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
            <span asp-validation-for="AccountPass" class="text-danger"></span>
        </div>
        <button class="btn btn-primary w-100 py-2" type="submit">Submit</button>
    </form>
</main>