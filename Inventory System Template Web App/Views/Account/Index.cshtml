@model IEnumerable<Account>


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="album py-5">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src=@item.Image width="100" height="225" />
                        <div class="card-body">
                            <p class="card-text">@item.Id</p>
                            <p class="card-text">@item.AccountName</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Account" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>                                    
                                </div>                                
                            </div>
                        </div>
                    </div>
                </div>
            }            
        </div>
        
    </div>
</div>