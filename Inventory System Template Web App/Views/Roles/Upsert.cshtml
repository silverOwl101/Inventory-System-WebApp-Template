@using Inventory_System_Template_Web_App.ViewModels
@model UpsertViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var title = "Create Role";
}
<br />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-info">@title</h1>
            <form method="post">
                @if (Model != null && !String.IsNullOrEmpty(Model.Id))
                {
                    title = "Edit Role";
                    <input asp-for="@Model.Id" hidden />
                }                
                <hr />                
                <div class="form-group">
                    <label asp-for="Id"></label>
                    <input asp-for="Id" readonly class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>                
                <br />
                <div class="form-group">
                    @if (Model != null && !String.IsNullOrEmpty(Model.Id))
                    {
                        <button type="submit" class="btn btn-success" value="Update">Update</button>                        
                    }
                    else
                    {
                        <button type="submit" class="btn btn-success" value="Create">Create</button>                        
                    }
                    <a asp-action="Index" class="btn btn-warning" style="width:auto">Back to User</a>
                </div>
            </form>
        </div>
    </div>
</div>
